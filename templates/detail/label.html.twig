{% extends "base.html.twig" %}

{% block title %}{{ parent() }} | {{ items[0].label }}{% endblock %}

{% block body %}
    <h4>All items from {{ items[0].label }}</h4>
    <table class="table table-hover table-striped">
        <thead class="thead-dark">
        <tr>
            <th>Artist</th>
            <th>Title</th>
            <th>Format</th>
            <th>Status</th>
            <th>Price</th>
        </tr>
        </thead>
        <tbody>
            {% for item in items %}
                <tr>
                    <td>
                        <a href="{{ path('artist_detail', {'artist': item.artist}) }}">
                            {{ item.artist }}
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('item_detail', {'id': item.id}) }}">
                            {{ item.title }}
                        </a>
                    </td>
                    <td>{{ item.format }}</td>
                    <td>{{ item.status }}</td>
                    <td>â‚¬ {{ item.price | number_format}}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

