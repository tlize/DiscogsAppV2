{% extends 'base.html.twig' %}

{% block body %}

    <h4>Login</h4>
    <form method="post">
        <br>
        <div class="row">
            <div class="col-lg-4">
                <div class="row">
                    <div class="col-lg-4">
                        <label for="username">Username</label>
                    </div>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" name="_username" id="username">
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col-lg-4">
                        <label for="password">Password</label>
                    </div>
                    <div class="col-lg-8">
                        <input class="form-control" type="password" name="_password" id="password">
                    </div>
                </div>
                <br>
                <div class="row">
                    <button class="btn btn-lg btn-primary" type="submit">Login</button>
                </div>
                <br>
            </div>
        </div>
    </form>

{% endblock %}

{% block title %}
    {{ parent() }} | Login
{% endblock %}

