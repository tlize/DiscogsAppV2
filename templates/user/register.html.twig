{% extends 'base.html.twig' %}

{% block body %}
    <h4>Please Register</h4>
    {{ form_start(registerForm) }}
    <br>
    <div class="row">
        <div class="col-lg-4">
            <div class="row">
                <div class="col-lg-4">
                    {{ form_label(registerForm.username) }}
                </div>
                <div class="col-lg-8">
                    {{ form_widget(registerForm.username) }}
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-lg-4">
                    {{ form_label(registerForm.email) }}
                </div>
                <div class="col-lg-8">
                    {{ form_widget(registerForm.email) }}
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-lg-4">
                    {{ form_label(registerForm.password.first) }}
                </div>
                <div class="col-lg-8">
                    {{ form_widget(registerForm.password.first) }}
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-lg-4">
                    {{ form_label(registerForm.password.second) }}
                </div>
                <div class="col-lg-8">
                    {{ form_widget(registerForm.password.second) }}
                </div>
            </div>
            <br>
            <div class="row">
                <button class="btn btn-lg btn-primary" type="submit">Register</button>
            </div>
            <br>
        </div>
    </div>
    {{ form_end(registerForm) }}
{% endblock %}

{% block title %}
    {{ parent() }} | Register
{% endblock %}

