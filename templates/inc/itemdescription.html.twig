<h5>
    <details>
        <summary>{{ item.release.description }} : â‚¬{{ item.price.value | number_format }}</summary>
        <div class="itemInfo">
            <p>Media Condition : {{ item.media_condition }}</p>
            {% if item.sleeve_condition != null %}
                <p>
                    Sleeve Condition : {{ item.sleeve_condition }}
                </p>
            {% endif %}
            {% if item.condition_comments != null %}
                <p>
                    {{ item.condition_comments | raw }}
                </p>
            {% endif %}
            <p>
                listing Id : {{ item.id }}
            </p>
            {% set releasePage = ['https://www.discogs.com/', item.release.description |slug, '/release/', item.release.id] | join %}
            <p>
                release Id : <a href="{{ releasePage }}" title="Discogs Release Page" target="_blank">{{ item.release.id }}</a>
            </p>
        </div>
    </details>
</h5>
