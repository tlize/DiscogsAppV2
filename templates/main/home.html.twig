{% extends "base.html.twig" %}

{% block title %}{{ parent() }} | Home{% endblock %}

{% block body %}
    <br>
    <h4>Latest Orders</h4>
    {% for order in orders %}
    <h5>{{ order.orderNum }} by {{ order.buyer }} (country) on {{ order.orderDate | date("d-m-Y") }} : x item(s), €xx</h5>
    {% endfor %}
    <br>
    <h4>Most Expensive Sold Items</h4>
    <table class="table table-sm table-hover table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Title</th>
                <th>Band / Artist</th>
                <th>Format</th>
                <th>Label</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.title }}</td>
                    <td>{{ item.artist }}</td>
                    <td>{{ item.format }}</td>
                    <td>{{ item.label }}</td>
                    <td>€{{ item.price| number_format }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {% if drafted %}
        <br>
        <h4>Draft or Violation</h4>
        <table class="table table-sm table-hover table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Discogs Id</th>
                    <th>Catalog #</th>
                    <th>Band / Artist</th>
                    <th>Title</th>
                    <th>Label</th>
                    <th>Format</th>
                    <th>Price</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                {% for draft in drafted %}
                    <tr>
                        <td>{{ draft.listingId }}</td>
                        <td>{{ draft.catno }}</td>
                        <td>{{ draft.artist }}</td>
                        <td>{{ draft.title }}</td>
                        <td>{{ draft.label }}</td>
                        <td>{{ draft.format }}</td>
                        <td>€{{ draft.price | number_format }}</td>
                        <td>{{ draft.status }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}

