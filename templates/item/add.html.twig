{% extends 'base.html.twig' %}

{% block body %}
    <h4>Add an Item in my Shop</h4>
        {{ form_start(itemForm) }}
        <br>
        <div class="row">
            <div class="col-lg-4">

                <div class="row">
                    <div class="col-lg-4">
                        {{ form_label(itemForm.listingId) }}
                        {{ form_errors(itemForm.listingId) }}
                    </div>
                    <div class="col-lg-8">
                        {{ form_widget(itemForm.listingId) }}
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col-lg-4">
                        {{ form_label(itemForm.artist) }}
                        {{ form_errors(itemForm.artist) }}
                    </div>
                    <div class="col-lg-8">
                        {{ form_widget(itemForm.artist) }}
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col-lg-4">
                        {{ form_label(itemForm.title) }}
                        {{ form_errors(itemForm.title) }}
                    </div>
                    <div class="col-lg-8">
                        {{ form_widget(itemForm.title) }}
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col-lg-4">
                        {{ form_label(itemForm.label) }}
                        {{ form_errors(itemForm.label) }}
                    </div>
                    <div class="col-lg-8">
                        {{ form_widget(itemForm.label) }}
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col-lg-4">
                        {{ form_label(itemForm.catno) }}
                        {{ form_errors(itemForm.catno) }}
                    </div>
                    <div class="col-lg-8">
                        {{ form_widget(itemForm.catno) }}
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col-lg-4">
                        {{ form_label(itemForm.format) }}
                        {{ form_errors(itemForm.format) }}
                    </div>
                    <div class="col-lg-8">
                        {{ form_widget(itemForm.format) }}
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col-lg-4">
                        {{ form_label(itemForm.releaseId) }}
