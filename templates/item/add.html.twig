                </div>
                <br>
                <div class="row">
                    <div class="col-lg-4">
                        {{ form_label(itemForm.price) }}
                        {{ form_errors(itemForm.price) }}
                    </div>
                    <div class="col-lg-8">
                        {{ form_widget(itemForm.price) }}
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col-lg-4">
                        {{ form_label(itemForm.mediaCondition) }}
                        {{ form_errors(itemForm.mediaCondition) }}
                    </div>
                    <div class="col-lg-8">
                        {{ form_widget(itemForm.mediaCondition) }}
                    </div>
                </div>
                <br>
                <div class="row">
                    <button class="btn btn-lg btn-primary" type="submit">Go !</button>
                </div>
            </div>
        </div>
        {{ form_end(itemForm) }}
{% endblock %}
