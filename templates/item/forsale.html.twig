{% extends "base.html.twig" %}

{% block title %}{{ parent() }} | Items For Sale{% endblock %}

{% block body %}
    <h4>Items For Sale</h4>
    <table class="table table-hover table-striped">
        <thead class="thead-dark">
        <tr>
            <th>Band / Artist</th>
            <th>Title</th>
            <th>Label</th>
            <th>Format</th>
            <th>Price</th>
        </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>{{ item.artist }}</td>
                <td><a href="{{ path('item_detail', {'id': item.id}) }}">{{ item.title }}</a></td>
                <td>{{ item.label }}</td>
                <td>{{ item.format }}</td>
                <td>â‚¬ {{ item.price | number_format}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}